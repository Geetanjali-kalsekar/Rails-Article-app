<h1  style= "text-align: center; font-size: 50px; color:deepskyblue ">Comment's</h1>
<div id="comment" class="comments-section">
  <h2>Comments</h2>
  <% article.comments.each do |comment| %>
    <div class="comment">
      <p>
        <strong>Commenter:</strong>
        <%= comment.commenter %>
      </p>

      <p>
        <strong>Comment:</strong>
        <%= comment.body %>
      </p>
    </div>
  <% end %>
</div>

<div id="add_comment" class="add-comment">
  <h2>Add a comment:</h2>
  <%= form_with model: [article, article.comments.build], class: "comment-form" do |form| %>
    <div class="form-group">
      <%= form.label :commenter, class: "form-label" %><br>
      <%= form.text_field :commenter, class: "form-input", placeholder: "Your Name" %>
    </div>
    <div class="form-group">
      <%= form.label :body, class: "form-label" %><br>
      <%= form.text_area :body, class: "form-textarea", placeholder: "Your Comment" %>
    </div>
    <div class="form-group">
      <%= form.submit "Add Comment", class: "form-submit" %>
    </div>
  <% end %>
</div>
