<div class="add-comment-page">
  <h1>Add a Comment</h1>

  <%= form_with model: [@article, @comment], class: "comment-form" do |form| %>
    <div class="form-group">
      <%= form.label :commenter, class: "form-label" %><br>
      <%= form.text_field :commenter, class: "form-input", placeholder: "Your Name" %>
    </div>
    <div class="form-group">
      <%= form.label :body, class: "form-label" %><br>
      <%= form.text_area :body, class: "form-textarea", placeholder: "Your Comment" %>
    </div>
    <div class="form-group">
      <%= form.submit "Submit Comment", class: "form-submit" %>
    </div>
  <% end %>
</div>
